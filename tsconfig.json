{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "noImplicitAny": false,
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@db/*": ["../db/*"],
      "@db": ["../db/index"],
      "@database/*": ["./database/*"],
      "@database": ["./database/index"],
      "@/modules/*": ["../modules/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "nativewind-env.d.ts"]
}
